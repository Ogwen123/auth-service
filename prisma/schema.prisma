datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-arm64-openssl-1.1.x"] // remove when generating on windows
}

model users {
    id            String @id @db.VarChar(255)
    username      String @db.VarChar(255)
    name          String @db.VarChar(255)
    email         String @db.VarChar(255)
    password_hash String @db.VarChar(255)
    perm_flag     Int    @default(value: 1)
    created_at    Int
    updated_at    Int
}

model blacklisted_tokens {
    token            String @id @db.VarChar(255)
    logout_timestamp Int
}
